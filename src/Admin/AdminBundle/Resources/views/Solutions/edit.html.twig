{% extends 'baseAdmin.html.twig' %}

{% block title %}Solutions-Edit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="page-header">
        Edit - Solutions
    </h1>

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div class="row">
            <div class="col-md-4 col-sm-6">
                {{ form_label(edit_form.file, 'Logo') }}
                {{ form_errors(edit_form.file) }}
                <img class='apercu' id="img-ava" style="height: 173px; margin-bottom: 5px;" src="{{ asset(['media/solution/', solution.solLogo]|join) }}"/>
                {{ form_widget(edit_form.file) }}
            </div>

            <div class="col-md-8 col-sm-6 edit-titre">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        {{ form_label(edit_form.solNom, 'Nom de la solution') }}
                        {{ form_errors(edit_form.solNom) }}
                        {{ form_widget(edit_form.solNom) }}
                    </div>
                    <div class="col-md-12 col-sm-12">
                        {{ form_label(edit_form.solFonc, 'Fonction') }}
                        {{ form_errors(edit_form.solFonc) }}
                        {{ form_widget(edit_form.solFonc) }}
                    </div>
                    <div class="col-md-12 col-sm-12">
                        {{ form_label(edit_form.solLink, 'Lien') }}
                        {{ form_errors(edit_form.solLink) }}
                        {{ form_widget(edit_form.solLink) }}
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 edit-ckeditor">
                {{ form_label(edit_form.solDescrib, 'Description') }}
                {{ form_errors(edit_form.solDescrib) }}
                {{ form_widget(edit_form.solDescrib) }}
            </div>
        </div>
        <div class="edit-footer" style="text-align: center !important;">
            <li><a href="{{ path('admin_solution_index') }}"><button type="button" class="btn btn-default">Annuler</button></a></li>
            <li><input class="btn btn-success" type="submit" value="Editer" /></li>
        </div>
    {{ form_end(edit_form) }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function(){
            $(".img-new").change(function(){
                readNewURL(this);
            });    
        }); 

        function readNewURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#img-ava').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>
{% endblock %}