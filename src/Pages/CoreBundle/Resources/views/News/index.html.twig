{% extends '::base.html.twig' %}

{% block body -%}
    <h1>News list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slideimage</th>
                <th>Slidetitre</th>
                <th>Slidenews</th>
                <th>Updateat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('newwws_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.slideImage }}</td>
                <td>{{ entity.slideTitre }}</td>
                <td>{{ entity.slideNews }}</td>
                <td>{% if entity.updateAt %}{{ entity.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('newwws_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('newwws_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('newwws_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
