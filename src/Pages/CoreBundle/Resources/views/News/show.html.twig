{% extends '::base.html.twig' %}

{% block body -%}
    <h1>News</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slideimage</th>
                <td>{{ entity.slideImage }}</td>
            </tr>
            <tr>
                <th>Slidetitre</th>
                <td>{{ entity.slideTitre }}</td>
